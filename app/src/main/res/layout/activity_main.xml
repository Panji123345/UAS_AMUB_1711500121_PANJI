<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latar"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/btn_jadwal"
        android:layout_width="150dp"
        android:layout_height="154dp"
        android:layout_centerInParent="false"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="260dp"
        android:onClick="jadwalles"
        app:srcCompat="@drawable/btn_jadwal" />

    <ImageView
        android:id="@+id/btn_daftarles"
        android:layout_width="150dp"
        android:layout_height="154dp"
        android:layout_marginLeft="186dp"
        android:layout_marginTop="260dp"
        android:onClick="daftar_les"
        app:srcCompat="@drawable/btn_daftar_les" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="306dp"
        android:layout_height="252dp"
        android:layout_below="@id/btn_daftarles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/info" />

</RelativeLayout>